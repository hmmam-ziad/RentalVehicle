@model RentalVehicle.Models.Customer

<h2>Edit Your Profile</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CustomerID" />
    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactInformation"></label>
        <input asp-for="ContactInformation" class="form-control" />
        <span asp-validation-for="ContactInformation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DriverLicenseNumber"></label>
        <input asp-for="DriverLicenseNumber" class="form-control" />
        <span asp-validation-for="DriverLicenseNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Change Password (Optional)</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
