@model IEnumerable<RentalVehicle.Models.Customer>
<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactInformation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicenseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactInformation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverLicenseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    @if (HttpContextAccessor.HttpContext.Session.GetString("Role") == "Admin")
                    {
                        <a asp-action="Details" asp-route-id="@item.CustomerID">Details</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
